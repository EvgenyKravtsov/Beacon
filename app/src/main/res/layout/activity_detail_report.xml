<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/actis_app_toolbar_background"
        android:id="@+id/actisApp_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Title here"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:layout_gravity="center_vertical"
                android:id="@+id/toolbar_title" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/actis_app_green_accent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/building_detail_report_label"
        android:textSize="24sp"
        android:textColor="@color/main_brand_dark_grey"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/from_label"
            android:textSize="20sp"
            android:textColor="@color/main_brand_dark_grey"
            android:layout_weight="5"
            android:layout_gravity="center_vertical"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_button_label"
                android:textSize="17sp"
                android:textColor="@drawable/grey_rounded_button_text_selector"
                android:textAllCaps="false"
                android:layout_weight="2"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/grey_rounded_button_selector"
                android:id="@+id/detail_report_activity_from_date_button"
                tools:ignore="NestedWeights,UnusedAttribute" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/time_button_label"
                android:textSize="17sp"
                android:textColor="@drawable/grey_rounded_button_text_selector"
                android:textAllCaps="false"
                android:layout_weight="2"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/grey_rounded_button_selector"
                android:id="@+id/detail_report_activity_from_time_button"
                tools:ignore="NestedWeights,UnusedAttribute" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/to_label"
            android:textSize="20sp"
            android:textColor="@color/main_brand_dark_grey"
            android:layout_weight="5"
            android:layout_gravity="center_vertical"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_button_label"
                android:textSize="17sp"
                android:textColor="@drawable/grey_rounded_button_text_selector"
                android:textAllCaps="false"
                android:layout_weight="2"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/grey_rounded_button_selector"
                android:id="@+id/detail_report_activity_to_date_button"
                tools:ignore="NestedWeights,UnusedAttribute" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/time_button_label"
                android:textSize="17sp"
                android:textColor="@drawable/grey_rounded_button_text_selector"
                android:textAllCaps="false"
                android:layout_weight="2"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/grey_rounded_button_selector"
                android:id="@+id/detail_report_activity_to_time_button"
                tools:ignore="NestedWeights,UnusedAttribute" />

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/delta_hint"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:textSize="15sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:inputType="numberDecimal"
        android:id="@+id/detail_report_activity_delta_field"
        style="@style/DetailReportScreenEditText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/offset_hint"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:textSize="15sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:inputType="numberDecimal"
        android:id="@+id/detail_report_activity_offset_utc_field"
        style="@style/DetailReportScreenEditText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:string/ok"
        android:textSize="20sp"
        android:textColor="@drawable/grey_rounded_button_text_selector"
        android:background="@drawable/grey_rounded_button_selector"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/detail_report_activity_ok_button" />

</LinearLayout>