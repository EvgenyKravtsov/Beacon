<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/actis_child_view_background"
    android:paddingLeft="10dp"
    android:paddingRight="20dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listItemHistory_timeTextView"
        android:textSize="15sp"
        tools:text="00:00"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:textColor="#FF000000"
        android:layout_marginLeft="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/listItemHistory_timeTextView"
        android:id="@+id/linearLayout"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0 sats."
            android:id="@+id/listItemHistory_satellitesCountTextView"
            android:textSize="15sp"
            android:textColor="@color/actis_app_text_color_hint" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/actis_app_text_color_hint"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0 km/h"
            android:id="@+id/listItemHistory_speedCountTextView"
            android:textSize="15sp"
            android:textColor="@color/actis_app_text_color_hint" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/actis_app_text_color_hint"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0 C"
            android:id="@+id/listItemHistory_temperatureCountTextView"
            android:textSize="15sp"
            android:textColor="@color/actis_app_text_color_hint" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/actis_app_text_color_hint"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0%"
            android:id="@+id/listItemHistory_chargeCountTextView"
            android:textSize="15sp"
            android:textColor="@color/actis_app_text_color_hint" />

    </LinearLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView2"
        android:src="@drawable/list_arrow"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>