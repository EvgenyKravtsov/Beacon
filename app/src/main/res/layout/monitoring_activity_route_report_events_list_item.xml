<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/monitoring_general_background_selector"
    android:id="@+id/monitoring_activity_route_report_events_list_item_layout">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="1">

        <TableRow android:layout_marginBottom="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/monitoring_activity_route_report_events_list_item_type_text_view"
                tools:text="In motion"
                style="@style/MonitoringStandardString" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_weight="2"
                android:id="@+id/monitoring_activity_route_report_events_list_item_information_text_view"
                style="@style/MonitoringStandardString"
                tools:text="Blalalalva adlasld asdarf afase asf af faaweff" />

        </TableRow>

        <TableRow android:layout_marginBottom="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start:"
                style="@style/MonitoringStandardString" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_weight="2"
                android:id="@+id/monitoring_activity_route_report_events_list_start_text_view"
                style="@style/MonitoringStandardString"
                tools:text="10:52:00" />

        </TableRow>

        <TableRow android:layout_marginBottom="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="End:"
                style="@style/MonitoringStandardString" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_weight="2"
                android:id="@+id/monitoring_activity_route_report_events_list_end_text_view"
                style="@style/MonitoringStandardString"
                tools:text="17:52:00" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Duration:"
                style="@style/MonitoringStandardString" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_weight="2"
                android:id="@+id/monitoring_activity_route_report_events_list_duration_text_view"
                style="@style/MonitoringStandardString"
                tools:text="07:00:00" />

        </TableRow>

    </TableLayout>

</LinearLayout>