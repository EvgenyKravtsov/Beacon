<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityGeneratorMain_toolbar"
    android:layout_height="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:background="@color/main_dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toolbar_generator_main_working_time_label"
            android:id="@+id/toolbarGeneratorMain_workTimeLabel"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_white"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:24"
            android:id="@+id/toolbarGeneratorMain_workTime"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/toolbarGeneratorMain_workTimeLabel"
            android:layout_toEndOf="@+id/toolbarGeneratorMain_workTimeLabel"
            android:background="@drawable/white_rectangle_background"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/main_dark" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toolbar_generator_main_history_button_label"
            android:id="@+id/activityGeneratorMainToolbar_historyButton"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@color/main_dark"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/text_white"
            android:gravity="start|center_vertical"
            android:layout_marginRight="5dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/toolbarGeneratorMain_historyButtonIcon"
            android:background="@drawable/generator_history_button_image"
            android:contentDescription="@string/toolbar_generator_main_history_button_label"
            android:layout_alignBottom="@+id/toolbarGeneratorMain_workTime"
            android:layout_toLeftOf="@+id/activityGeneratorMainToolbar_historyButton"
            android:layout_toStartOf="@+id/activityGeneratorMainToolbar_historyButton" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/toolbarGeneratorMain_statusIndicator"
                android:background="@drawable/generator_status_indicator_online"
                android:contentDescription="@string/toolbar_generator_main_status_label_online"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/toolbar_generator_main_status_label_online"
                android:textColor="@color/text_white"
                android:id="@+id/toolbarGeneratorMain_statusLabel"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.Toolbar>