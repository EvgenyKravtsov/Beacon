<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_brand_blue">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            tools:ignore="UselessParent">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ordering_by_type_label"
                android:id="@+id/fragmentDeviceList_typeButton"
                android:textSize="20sp"

                android:layout_marginRight="80dp"
                android:layout_marginEnd="80dp"
                android:textColor="@color/text_white"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ordering_by_group_label"
                android:id="@+id/fragmentDeviceList_groupButton"
                android:textSize="20sp"
                android:textColor="@color/text_white"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />

        </RadioGroup>

    </FrameLayout>

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragmentDeviceList_deviceListView"
        android:layout_marginTop="30dp" />

</LinearLayout>