<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:padding="8dp"
    android:id="@+id/monitoring_activity_group_list_item_layout"
    tools:ignore="RtlSymmetry">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/monitoring_activity_group_list_item_name_text_view"
        style="@style/MonitoringStandardString"
        tools:text="Test Group Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/monitoring_activity_group_list_item_count_text_view"
        style="@style/ListItemSubString"
        tools:text="20 devices" />

</LinearLayout>