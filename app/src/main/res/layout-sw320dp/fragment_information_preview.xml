<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/fragmentInformation_controlButtons">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:text="@string/history_button_label"
            android:id="@+id/fragmentInformation_historyButton"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="@drawable/actis_menu_button_selector"
            android:textColor="@drawable/actis_menu_button_text_selector" />

        <!-- Search Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/informationFragment_searchButton"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/actis_search_button_frame"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:id="@+id/informationFragment_searchButtonIcon"
                android:src="@drawable/actis_search_button_icon_off"
                android:contentDescription="@string/activity_generator_main_manual_button_label"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/informationFragment_searchButtonText"
                android:text="@string/search_on_button_label"
                android:background="#00000000"
                android:textColor="@color/actis_app_text_color_hint"
                android:textSize="20sp"
                android:gravity="center_vertical" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:text="@string/help_screen_title"
            android:id="@+id/fragmentInformation_settingsButton"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:background="@drawable/actis_menu_button_selector"
            android:textColor="@drawable/actis_menu_button_text_selector"
            tools:ignore="UnusedAttribute" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/actis_app_blue_accent"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/fragmentInformation_informationFieldRelativeLayout"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_action_text"
                    android:id="@+id/fragmentInformation_lastActionTextView"
                    android:textSize="15sp"
                    android:textColor="@color/actis_app_text_color_hint"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="&lt;TimeStamp>"
                    android:id="@+id/fragmentInformation_lastActionTimeStamp"
                    android:textSize="15sp"
                    android:textColor="@color/actis_app_orange_accent"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_positioning_text"
                    android:id="@+id/fragmentInformation_lastPositioningTextView"
                    android:textSize="15sp"
                    android:textColor="@color/actis_app_text_color_hint"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="&lt;TimeStamp>"
                    android:id="@+id/fragmentInformation_lastPositioningTimeStamp"
                    android:textSize="15sp"
                    android:textColor="@color/actis_app_orange_accent"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/actis_app_orange_accent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="20dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/speed_label"
                        android:id="@+id/fragmentInformation_speedTextView"
                        android:textColor="#ff000000"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/charge_label"
                        android:id="@+id/fragmentInformation_chargeTextView"
                        android:textColor="#ff000000"
                        android:textSize="15sp" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:baselineAligned="false">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0 km/h"
                        android:id="@+id/fragmentInformation_speedCountTextView"
                        android:textColor="#ff000000"
                        android:textSize="15sp"
                        android:layout_gravity="left" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0"
                        android:id="@+id/fragmentInformation_chargeCountTextView"
                        android:textSize="15sp"
                        android:textColor="#ff000000"
                        android:layout_gravity="left|center_horizontal" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <!-- Query Button -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/informationFragment_queryButton"
                    android:orientation="horizontal"
                    android:background="@drawable/query_button_selector"
                    android:paddingRight="1dp"
                    android:paddingEnd="1dp"
                    android:paddingLeft="15dp"
                    android:paddingStart="15dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/informationFragment_queryButtonText"
                        android:text="Запрос местоположения"
                        android:background="#00000000"
                        android:textColor="@drawable/query_button_text_selector"
                        android:textSize="20sp"
                        android:gravity="center_vertical" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:id="@+id/informationFragment_queryButtonIcon"
                        android:src="@drawable/query_button_icon"
                        android:contentDescription="@string/activity_generator_main_manual_button_label"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>